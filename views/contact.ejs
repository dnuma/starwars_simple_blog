<%- include('layouts/header'); -%>
<!-- Article 1 start -->

<div class="line"></div>
<!-- Dividing line -->

<article id="article1">
    <!-- The new article tag. The id is supplied so it can be scrolled into view. -->
    <h2><a href="#">Contact Us</a></h2>

    <div class="line"></div>

    <div class="articleBody clear">
        <aside id="sidebar_2col">
            <figure class="figure-contact">
                <!-- The figure tag marks data (usually an image) that is part of the article -->
                <img class="figure-contact" src="../images/email-us.png" width="300" title="Contact Us"
                    alt="Contact Us" />
            </figure>
        </aside>
        <section id="main_2col">
            <h3>Get in touch with me</h3>
            
            <form name="email-form" action="#" method="post">
                <p><label class="lbl" for="name">Name:</label>
                    <input type="text" name="name" id="name" placeholder="Qui-Gon Jinn" required autofocus>
                </p>
                <p><label class="lbl" for="address">Address:</label>
                    <input type="text" name="address" id="address" placeholder="123 Galactic Capital" required>
                </p>
                <p><label class="lbl" for="phone">Phone Number:</label>
                    <input type="text" name="phone" id="phone" placeholder="123-456-7890" required>
                    <% if(typeof errors !=='undefined' ){ for(var error of errors){ %>
                            <label style="color: red;">
                                <%= error.msg %>
                            </label>
                        <% } } %>
                </p>
                <p><label class="lbl" for="email">Email:</label>
                    <input type="email" name="email" id="email" placeholder="mace@windu.com" required>
                </p>
                <h4>Tell me more about yourself</h4><br>
                <table>
                    <tr>
                        <td>
                            <fieldset>
                                <legend>Side of the force</legend>
                                <p style="font-style: italic;">You must choose a side</p>
                                <p><input type="radio" name="force" id="force1" value="Light" required>
                                    <label for="force1">&nbsp; Light (Jedi)</label>
                                </p>
                                <p><input type="radio" name="force" id="force2" value="Dark">
                                    <label for="force2">&nbsp; Dark (Sith)</label>
                                </p>
                                <p><input type="radio" name="force" id="force3" value="Undefined">
                                    <label for="force3">&nbsp; I don't know yet</label>
                                </p>
                            </fieldset>
                        </td>
                        <td>
                            <fieldset aria-required="true">
                                <legend>Race</legend>
                                <p style="font-style: italic;">Optional</p>
                                <p><input type="checkbox" name="human" id="human" value=true>
                                    <label for="human">&nbsp; Human</label>
                                </p>
                                <p><input type="checkbox" name="wookie" id="wookie" value=true>
                                    <label for="wookie">&nbsp; Wookie</label>
                                </p>
                                <p><input type="checkbox" name="hutt" id="hutt" value=true>
                                    <label for="hutt">&nbsp; Hutt</label>
                                </p>
                            </fieldset>
                        </td>
                    </tr>
                </table>
                <br />

                <p><label for="comment">Comment:</label><br>
                    <textarea id="comment" name="comment"
                        placeholder="Please specify everything you need." required></textarea>
                </p>
                <p><input class="submit-btn btn" type="submit" name="submit" id="submit">
                    <input class="reset-btn btn" type="reset" name="reset" id="reset">
                </p>
            </form>
        </section>
    </div>
</article>

<!-- Article 1 end -->
<%- include('layouts/footer'); -%>